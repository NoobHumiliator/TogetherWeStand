<root>
    <styles>
        <include src="file://{resources}/styles/custom_game/util.css" />
        <include src="file://{resources}/styles/custom_game/tws_pay_panel.css" />
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/util.js" />
        <include src="file://{resources}/scripts/custom_game/tws_pay_panel.js" />
    </scripts>
    <Panel style="width:100%;height:100%; z-index:2;" hittest="false">

        <!--支付弹窗-->
        <Panel id="PaymentWindow" class="Hidden" onactivate="">
            <Panel id="PaymentWindowContent">
                <HTML id="PaymentWindowHTML" acceptsinput="true" />               
                <Panel id="PaymentWindowLoader">
                    <Panel class="Spinner" />
                </Panel>
                <Panel id="PaymentWindowWaitPaypal">
                    <Label id="PaymentWindowWaitPaypalMessage" text="#UseBrowerToPay" />
                </Panel>
                <Panel id="PaymentWindowError"> 
                    <Label id="PaymentWindowErrorMessage" />
                </Panel>
            </Panel>
            <Button class="CloseButton" onactivate="SetPaymentWindowStatus('closed')" />
        </Panel>
 
        <Panel id="PassPanel" class="Hidden">
          <Button id="PassCloseButton" onactivate="ClosePassPanel()"/>
          <Panel id="BGImage"/>
          <Panel id="PassContainer">
             <Label id="PassContainerTitle" text="#pass_title"/>
             <Label id="PassContainerText" text="#pass_text"/>
             <Label id="PassUntilLabel" text=""/>
             <Panel id="PassCashPanel">
                    <Panel id="PaymentTabs">
                      <Panel class="WeChatLogo" onactivate="GetPaymentQRCode('pass','wechat')"/>
                      <Panel class="AliPayLogo" onactivate="GetPaymentQRCode('pass','alipay')"/>
                      <Panel class="PayPalTabLogo" onactivate="GetPaymentQRCode('pass','paypal')"/>
                      <Panel id="PassPaymentTier" class="PaymentTier"> 
                      <Label id="PassSelectPaymentLabel" class="SelectPaymentLabel" text="#PleaseSelectPayment"/>
                      </Panel>
                    </Panel>
             </Panel>

          </Panel>
        </Panel>
    </Panel>
</root>