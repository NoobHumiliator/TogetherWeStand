<root>
   <styles>
      <include src="file://{resources}/styles/custom_game/util.css" />
      <include src="file://{resources}/styles/custom_game/tws_spell_shop_ui.css" />
      <include src="file://{resources}/styles/custom_game/tws_particle_panel.css" />
   </styles>
   <scripts>
      <include src="file://{resources}/scripts/custom_game/util.js" />
      <include src="file://{resources}/scripts/custom_game/tws_particle_panel.js" />
   </scripts>
   <snippets>
      <snippet name="snippet_container">
         <Panel>
            <Panel class="ParticlePanelContainer" id="ParticlePanelContainer" hittest="true">
               <Panel class="ParticlePanel" id="ParticlePanel_1">
                  <RadioButton id="ParticleRadioButton_1" class="ParticleRadioButton" onmouseover="ShowParticleTooltip(1)" onmouseout="HideParticleTooltip(1)" />
                  <RadioButton id="ParticleRadioButton_2" class="ParticleRadioButton" onmouseover="ShowParticleTooltip(2)" onmouseout="HideParticleTooltip(2)" />
                  <RadioButton id="ParticleRadioButton_3" class="ParticleRadioButton" onmouseover="ShowParticleTooltip(3)" onmouseout="HideParticleTooltip(3)" />
                  <RadioButton id="ParticleRadioButton_4" class="ParticleRadioButton" onmouseover="ShowParticleTooltip(4)" onmouseout="HideParticleTooltip(4)" />
                  <RadioButton id="ParticleRadioButton_5" class="ParticleRadioButton" onmouseover="ShowParticleTooltip(5)" onmouseout="HideParticleTooltip(5)" />
               </Panel>
               <Panel class="ParticlePanel" id="ParticlePanel_2">
                  <RadioButton id="ParticleRadioButton_6" class="ParticleRadioButton" onmouseover="ShowParticleTooltip(6)" onmouseout="HideParticleTooltip(6)"/>
                  <RadioButton id="ParticleRadioButton_7" class="ParticleRadioButton" onmouseover="ShowParticleTooltip(7)" onmouseout="HideParticleTooltip(7)"/>
                  <RadioButton id="ParticleRadioButton_8" class="ParticleRadioButton" onmouseover="ShowParticleTooltip(8)" onmouseout="HideParticleTooltip(8)"/>
                  <RadioButton id="ParticleRadioButton_9" class="ParticleRadioButton" onmouseover="ShowParticleTooltip(9)" onmouseout="HideParticleTooltip(9)"/>
                  <RadioButton id="ParticleRadioButton_10" class="ParticleRadioButton" onmouseover="ShowParticleTooltip(10)" onmouseout="HideParticleTooltip(10)"/>
               </Panel>
         

               <Panel class="ParticlePanelDown" id="ParticlePanelDown">
                  <Button id="ParticleConfirmButton" onactivate="ConfirmParticle()">
                     <Label text="#particle_confirm" />
                  </Button>
                  <Button id="ParticleCancleButton" onactivate="CancleParticle()">
                     <Label text="#particle_cancle" />
                  </Button>
               </Panel>
            </Panel>
         </Panel>
      </snippet>
   </snippets>

   <Panel class="ParticlePanelOutBlock" hittest="false" />

</root> 